<?xml version="1.0" encoding="UTF-8"?>

<conan-pipelines xmlns="http://www.ebi.ac.uk/arrayexpress/conan/pipelines"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.ebi.ac.uk/arrayexpress/conan/pipelines
                                     http://www.ebi.ac.uk/arrayexpress/conan/pipelines.xsd">

    <!--
    Add xml elements to name your pipeline and chain processes together here
    Note that the interface will display these pipelines in declaration order, with the first pipeline as the default
    -->

    <pipeline name="BioSamples from ArrayExpress" creator="faulcon" daemonized="true">
        <processes>
            <process name="updatesourcearrayexpress" displayName="update AE source idf/srdf" />
            <process name="topresampletabarrayexpress" displayName="idf/srdf to sampletab.pre.txt" />
            <process name="accessionsampletab" displayName="accession sampletab.pre.txt to sampletab.txt" />
<!--             <process name="toftp" displayName="copy to FTP site" /> -->
            <process name="totoloadsampletab" displayName="to sampletab.toload.txt" />
<!--             <process name="toagetab" displayName="to AGE-TAB" /> -->
<!--             <process name="load" displayName="load" /> -->
        </processes>
    </pipeline>
    
    <pipeline name="BioSamples from IMSR" creator="faulcon">
        <processes>
            <process name="updatesourceimsr" displayName="update IMSR source raw.tab.txt" />
            <process name="topresampletabimsr" displayName="IMSR raw.tab.txt to sampletab.pre.txt" />
            <process name="accessionsampletab" displayName="accession sampletab.pre.txt to sampletab.txt" />
<!--             <process name="toftp" displayName="copy to FTP site" /> -->
            <process name="totoloadsampletab" displayName="to sampletab.toload.txt" />
<!--             <process name="toagetab" displayName="to AGE-TAB" /> -->
<!--             <process name="load" displayName="load" /> -->
        </processes>
    </pipeline>
    
    <pipeline name="BioSamples from ENA SRA" creator="faulcon">
        <processes>
            <process name="updatesourceenasra" displayName="update ENA SRA study.xml and related sample xml files" />
            <process name="topresampletabenasra" displayName="ENA SRA study.xml and related sample xml files to sampletab.pre.txt" />
            <process name="accessionsampletab" displayName="accession sampletab.pre.txt to sampletab.txt" />
<!--             <process name="toftp" displayName="copy to FTP site" /> -->
            <process name="totoloadsampletab" displayName="to sampletab.toload.txt" />
<!--             <process name="toagetab" displayName="to AGE-TAB" /> -->
<!--             <process name="load" displayName="load" /> -->
        </processes>
    </pipeline>

</conan-pipelines>