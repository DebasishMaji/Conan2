<?xml version="1.0" encoding="UTF-8"?>

<conan-pipelines xmlns="http://www.ebi.ac.uk/arrayexpress/conan/pipelines"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.ebi.ac.uk/arrayexpress/conan/pipelines
                                     http://www.ebi.ac.uk/arrayexpress/conan/pipelines.xsd">

    <!--
    Add xml elements to name your pipeline and chain processes together here
    Note that the interface will display these pipelines in declaration order, with the first pipeline as the default
    -->

    <!-- AE2 processes -->
    <pipeline name="AE2 Experiment Loading" creator="natalja" daemonized="false">
        <processes>
            <process name="validation" />
            <process name="experiment loading" />
            <process name="scoring" />
            <process name="afterloading" />
        </processes>
    </pipeline>

    <pipeline name="AE2 Experiment Unloading" creator="natalja">
        <processes>
            <process name="experiment unloading" />
        </processes>
    </pipeline>

    <pipeline name="AE2 ADF Loading" creator="natalja">
        <processes>
            <process name="validation" />
            <process name="adf loading" />
            <process name="scoring" />
            <process name="afterloading" />
            <!--<process name="adf reannotation" />-->
        </processes>
    </pipeline>

    <pipeline name="AE2 ADF Unloading" creator="natalja">
        <processes>
            <process name="adf unloading" />
        </processes>
    </pipeline>

</conan-pipelines>