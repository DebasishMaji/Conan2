    <!-- demo pipeline -->
    <pipeline name="demo pipeline" creator="tburdett">
        <processes>
            <process name="demo process"/>
        </processes>
    </pipeline>

    <pipeline name="demo pipeline (many processes)" creator="tburdett">
        <processes>
            <process name="demo process"/>
            <process name="demo process"/>
            <process name="demo process"/>
            <process name="demo process"/>
            <process name="demo process"/>
            <process name="demo process"/>
            <process name="demo process"/>
        </processes>
    </pipeline>

    <pipeline name="demo pipeline (lsf)" creator="tburdett">
        <processes>
            <process name="demo process (executes on LSF)"/>
            <process name="demo process"/>
            <process name="demo process (executes on LSF)"/>
            <process name="demo process"/>
        </processes>
    </pipeline>

    <!-- demo pipeline, many params -->
    <pipeline name="demo pipeline (5 params)" creator="tburdett">
        <processes>
            <process name="demo process"/>
            <process name="demo process (5 parameters)"/>
        </processes>
    </pipeline>

    <!-- demo pipeline, process 2 fails -->
    <pipeline name="demo pipeline (always fails)" creator="tburdett">
        <processes>
            <process name="demo process"/>
            <process name="demo process (always fails)"/>
        </processes>
    </pipeline>

